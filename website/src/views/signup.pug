include includes/globals

- const pageTitle = 'Create a new account'
- const currentPath = ['account', 'sign up']
- const metaDescription = 'Create a new account to play Counter-Strike Online 2 in this custom master server.'

doctype html
html(lang="en")  
  include includes/head
  body
    include includes/background
    div(class="wrapper")
      include includes/logo
      include includes/announcement
      include includes/statusbar
      include includes/sidebar
      div(class="content")
        div(class="title")
          h3 Create a new account
        form(action="/do_signup", method="post") 
          include includes/antibotfield
          div(class="form-item")
            span username:
            input(type="text", name="username" required="true")
          div(class="form-item")
            span ingame name:
            input(type="text", name="playername" required="true")
          div(class="form-item")
            span password:
            input(type="password", name="password" required="true")
          div(class="form-item")
            span repeat your password:
            input(type="password", name="confirmed_password" required="true")
